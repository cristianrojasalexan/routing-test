<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<div class="py-2">
  <%= link_to 'Asignar rutas', auto_assign_routes_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Id</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Load type</th>
      <th>Load sum</th>
      <th>Cities</th>
      <th>Stops amount</th>
      <th>Assigned driver</th>
      <th>Vehicle ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.id %></td>
        <td><%= route.starts_at %></td>
        <td><%= route.ends_at %></td>
        <td><%= Route.load_types.key(route.load_type) %></td>
        <td><%= route.load_sum %></td>
        <td><%= route.cities %></td>
        <td><%= route.stops_amount %></td>
        <% if route.driver.nil? %>
          <td>No asignado</td>
        <% else %>
          <td><%= route.driver.id %></td>
        <% end %>
        <% if route.vehicle.nil? %>
          <td>No asignado</td>
        <% else %>
          <td><%= route.vehicle_id %></td>
        <% end %>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
